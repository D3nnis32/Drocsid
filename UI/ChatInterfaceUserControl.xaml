<UserControl x:Class="UI.ChatInterfaceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Margin="5,5,0,5"
                            VerticalAlignment="Stretch"
                            Background="White"
                            CornerRadius="5">
                        <TextBox Margin="5,0,5,0" BorderThickness="0" VerticalAlignment="Center" x:Name="tb" Text="" />
                    </Border>
                    <Popup Width="{Binding RelativeSource={RelativeSource Self},
                              Path=PlacementTarget.ActualWidth}"
                              Placement="Bottom"
                              PlacementTarget="{Binding ElementName=tb}">
                        <Popup.Style>
                            <Style TargetType="{x:Type Popup}">
                                <Setter Property="IsOpen"
                                    Value="False" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=tb,
                                                 Path=IsFocused}"
                                                 Value="True">
                                        <Setter Property="IsOpen"
                                                Value="True" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Popup.Style>
                        <ListBox>
                            <ListBoxItem Content="A" />
                            <ListBoxItem Content="B" />
                        </ListBox>
                    </Popup>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Margin="5">+</Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <ListView ItemsSource="{Binding Channels}"
                          Background="Transparent"
                          BorderThickness="0"
                          Margin="2"
                          Foreground="White"
                          SelectedItem="{Binding SelectedChannel, Mode=TwoWay}" d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <!-- ✅ Remove any default selection border/effect -->
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                            <Style.Triggers>
                                <!-- 🟡 Fix Hover Effect -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3C3F45"/>
                                    <!-- Slightly lighter gray -->
                                </Trigger>

                                <!-- 🔵 Fix Selection Effect (Uniform Color) -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#3E4148"/>
                                    <!-- Slightly lighter gray when selected -->
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Name}"/>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">

            </Grid>
            <Grid Grid.Row="1">
                <ContentControl Grid.Row="1" 
                                Grid.Column="1"
                                Content="{Binding CurrentView}">
                </ContentControl>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0">
                    <Button Margin="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20">
                                    <TextBlock Text="+"
                                               FontSize="16"
                                               Foreground="Black"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Background="White" 
                            CornerRadius="10"
                            Padding="5"
                            Margin="2">
                        <TextBox Foreground="Black" 
                                 FontSize="16"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center" 
                                 BorderThickness="0"/>
                    </Border>
                </Grid>
                <Grid Grid.Column="2">
                    <Button Margin="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                    CornerRadius="20">
                                    <TextBlock Text="Send"
                           FontSize="16"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

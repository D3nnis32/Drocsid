<Window x:Class="UI.RegisterNewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New User" Height="200" Width="400"
        Background="#202225"
        Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Username -->
        <TextBlock Text="Username:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Username}" Grid.Row="0" Margin="80,0,0,5" Width="200"/>

        <!-- Email -->
        <TextBlock Text="Email:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Email}" Grid.Row="1" Margin="80,0,0,5" Width="200"/>

        <!-- Password (PasswordBox) -->
        <TextBlock Text="Password:" Grid.Row="2" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBoxControl" 
                     Grid.Row="2" Margin="80,0,0,5" Width="200"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <!-- Preferred Region -->
        <TextBlock Text="Preferred Region:" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox Text="{Binding PreferredRegion}" 
                 Grid.Row="3" Margin="110,0,0,5" Width="170"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <Button Content="Register" 
                    Width="80" 
                    Command="{Binding RegisterCommand}" 
                    Margin="0,10,0,0"/>

            <Button Content="Close" 
                    Width="80" 
                    Command="{Binding CloseWindowCommand}"
                    Margin="100,10,0,0"/>
        </StackPanel>
        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   Grid.Row="5" 
                   Foreground="Red" 
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
